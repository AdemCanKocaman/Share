{% extends 'base.html.twig' %}

{% block title %}Categories
{% endblock %}

{% block body %}
	<div class="accordion" id="accordionExample">
		{% for category in categories %}
			<div class="accordion-item">
				<h2 class="accordion-header" id="heading{{ loop.index }}">
					<button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#collapse{{ loop.index }}" aria-expanded="false" aria-controls="collapse{{ loop.index }}">
						{{ category.titre }}
					</button>
				</h2>
				<div id="collapse{{ loop.index }}" class="accordion-collapse collapse" aria-labelledby="heading{{ loop.index }}" data-bs-parent="#accordionExample">
					<div class="accordion-body">
						<strong>{{ category.sujet }}</strong>
						<br>
						{{ category.description }}.<br>
						<code>{{ category.autor }}</code>
						<a href="{{path("app_modifier",{'id':category.id})}}">
							<i class="bi bi-pen-fill text-green"></i>
						</a>
						<a href="{{path("app_supprimer_categorie",{'id':category.id})}}">
							<i class="bi bi-trash-fill text-red"></i>
						</a>
						<a href=""><input class="form-check-input" type="checkbox" value="" id="flexCheckDefault"></a>
					</div>
				</div>
			</div>
		{% endfor %}
	</div>
	<br><br>
	{{form(form)}}{% endblock %}
